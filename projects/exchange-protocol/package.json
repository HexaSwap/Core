{
  "name": "exchange-protocol",
  "description": "Exchange contracts from Uniswap v2, and new features (zaps)",
  "version": "2.0.0",
  "license": "GPL-3.0/MIT",
  "private": true,
  "scripts": {
    "copy-v1-artifacts": "ncp ./buildV1 ./artifacts/src",
    "clean": "npx hardhat clean",
    "precompile": "yarn clean",
    "compile": "npx hardhat compile",
    "postcompile": "yarn copy-v1-artifacts",
    "test": "npx hardhat test",
    "test:coverage": "npx hardhat coverage",
    "test:size-contracts": "npx hardhat size-contracts",
    "deploy:tesnet": "npx hardhat deploy --network testnet",
    "deploy:mainnet": "npx hardhat deploy --network mainnet",
    "format:fix": "prettier --write \"**/*.+(js|jsx|ts|tsx|json|css|md)\""
  },
  "devDependencies": {
    "@chainlink/contracts": "0.1.7",
    "@nomiclabs/hardhat-ethers": "^2.0.5",
    "@nomiclabs/hardhat-waffle": "^2.0.3",
    "@openzeppelin/contracts": "^4.6.0",
    "@openzeppelin/test-helpers": "^0.5.15",
    "@types/chai": "^4.3.1",
    "@types/mocha": "^9.1.1",
    "@uniswap/lib": "4.0.1-alpha",
    "@uniswap/v2-core": "^1.0.1",
    "chai": "^4.3.6",
    "chai-ethers": "^0.0.1",
    "ethereum-waffle": "^3.4.4",
    "ethereumjs-util": "^7.1.4",
    "ethers": "^5.6.4",
    "hardhat": "^2.9.3",
    "hardhat-deploy": "^0.11.4",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "mocha": "^10.0.0",
    "ncp": "^2.0.0"
  }
}